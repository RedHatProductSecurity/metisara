# Metisara Configuration File
# Configuration for JIRA ticket creation and project management

[jira]
# Your JIRA instance URL
url = https://your-jira-instance.com/

# Your JIRA username/email
username = user@example.com

[files]
# Input CSV file with processed project tickets
csv_file_input = workspace/input/input.csv
csv_file_output = workspace/output/output.csv

[google_sheets]
# Google Sheets URL for CSV import (optional)
# If specified, this will be used as the default source for CSV data
# You can still override this with --google-sheets command line option
# IMPORTANT: Include the gid parameter to specify which sheet tab to use (gid=0 is the first tab)
# Example: https://docs.google.com/spreadsheets/d/ABC123DEF456/edit?gid=1234567890#gid=1234567890
url = https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit?gid=0#gid=0

[project]
# Default project key for JIRA tickets
default_project = PROJ
